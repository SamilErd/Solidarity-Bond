{% extends 'base.html.twig' %}

{% block title %}Boutique
{% endblock %}

    {% block stylesheets %}{% endblock %}

{% block body %}
	<div class="jumbotron jumbotron-fluid">
		<div class="container">
			<h1 class="display-4">Boutique</h1>
        </div>
    </div>     

    <div class="container">
    <div class="row">

            {% for product in products %}
            <div class="col">
                    <div class="card mt-3 mb-5 ">
                        <img class="card-img-top" src="../images/products/{{product.Image}}" alt="Photo Produit" style="width:300px;height:300px;margin: 0 auto;">
                        <div class="card-block">
                            <h2 class="card-title-shop">{{product.ProductName}}</h2>
                            <p class="card-text-shop d-inline-block text-truncate">{{product.Description}}</p>
                            <p class="price card-text" >{{product.price}} â‚¬</p>
                            <a href="{{path('show_product', {'id': product.id })}}" id="button" class="btn stretched-link">En savoir plus</a>
                        </div>
                    </div>
            </div>
            {% endfor %}

    </div>
    </div>

{% endblock %}