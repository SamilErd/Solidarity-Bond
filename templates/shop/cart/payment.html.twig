{% extends 'base.html.twig' %}

{% block title %}{% trans %}Paiement{% endtrans %}
{% endblock %}

{% block body %}


    <div class="jumbotron jumbotron-fluid">
		<div class="container">
			<h1 class="display-4">{% trans %}Paiement{% endtrans %}</h1>
		</div>
	</div>

<div class="container">
    <form method="post">
        <div class="card-payment mx-a">

        <h4 class="title">{% trans %}Information de Paiement{% endtrans %}</h4>

        <div class="row">

            <input id="card-name" class="color-strip field mb-3 col-12" type ="text" placeholder="{% trans %}Titulaire de la carte{% endtrans %}">
            
            <div id="card-number" class="form-control field col-md-12 col-sm-12"></div>
            <div id="card-expiry" class="form-control field col-md-4 col-sm-12"></div>
            <div id="card-cvc" class="form-control field col-md-4 col-sm-12"></div>

            <input id="postal-code" class="field color-strip col-md-4" type="text" placeholder="{% trans %}Code postal{% endtrans %}">


            <button class="button-pay btn" id="card-button" type="button" data-secret={{ intent.client_secret }}>{% trans %}Payer{% endtrans %} {{ price }} â‚¬</button>
           
            <div id="card-errors" role="alert"></div>
        
        </div>

        

        
        </div>
    </form>
</div>



{% endblock %}
