{% extends 'base.html.twig' %}

{% block title %}Panier
{% endblock %}

{% block body %}

    <div class="jumbotron jumbotron-fluid">
		<div class="container">
			<h1 class="display-4">Votre panier</h1>
		</div>
	</div>

<div class="container">
    {% if items | length > 0 %}

    <div class="row">

        <table class="col table table-cart">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Produit</th>
                <th scope="col">Prix</th>
                <th scope="col">Quantité</th>
                <th></th>
            </tr>
            </thead>

        <tbody>
            {% for item in items %}
            <tr>
                <th>{{item.product.ProductName}}</th>
                <th>{{item.product.Price}} €</th>
                <th>{{item.quantity}}</th>
                <th>
                    <a href="{{path('cart_remove', {'id' : item.product.id , 'url':  app.request.attributes.get('_route')  })   }}" class="btn btn-sm">
                        <i class="fas fa-times"></i>
                    </a>   
                </th>
            </tr> 
            {% endfor %}
        </tbody>

        </table>

        <div class="col">           
            <div class="card card-cart">
            
                <div class="card-block">
                    <p>Montant total de vos articles</p>
                    <p class="size-font">{{ total }} €</p>
                    <hr class="diviser">
                    <a class="btn" href="{{path('show_order')}}" id="button">Passer Commande</a>
                    
                </div>
            
            </div>

        </div>
    </div>

    {% else %}

    <h4 class="text-center">Votre panier est vide !</h4>

    {% endif %}
</div>

{% endblock %}
