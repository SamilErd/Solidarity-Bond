{% extends 'base.html.twig' %}

{% block title %}Panier
{% endblock %}

{% block body %}

    <div class="jumbotron jumbotron-fluid">
		<div class="container">
			<h1 class="h1-respons">{% trans %}Votre panier{% endtrans %}</h1>
		</div>
	</div>

<div class="container width-responsive">
    {% if items | length > 0 %}

    <div class="row">

        <table class="col-xl-7 col-md-11 table">
            <thead class="thead-dark">
            <tr>
                <th scope="col">{% trans %}Produits{% endtrans %}</th>
                <th scope="col">{% trans %}Prix{% endtrans %}</th>
                <th scope="col">{% trans %}Quantité{% endtrans %}</th>
                <th></th>
            </tr>
            </thead>

        <tbody>
            {% for item in items %}
            <tr>
                <th>{{item.product.ProductName}}</th>
                <th>{{item.product.Price}} €</th>
                <th>{{item.quantity}}</th>
                <th>
                    <a href="{{path('cart_remove', {'id' : item.product.id , 'url':  app.request.attributes.get('_route')  })   }}" class="btn btn-sm">
                        <i class="fas fa-times"></i>
                    </a>   
                </th>
            </tr> 
            {% endfor %}
        </tbody>

        </table>

        <div class="col-xl-4 col-md-11">           
            <div class="card card-cart">
            
                <div class="card-block">
                    <p>{% trans %}Montant total de vos articles{% endtrans %}</p>
                    <p class="size-font">{{ total }} €</p>
                    <hr class="diviser">
                    <a class="btn" href="{{path('show_order')}}" id="button">{% trans %}Passer Commande{% endtrans %}</a>
                    
                </div>
            
            </div>

        </div>
    </div>

    {% else %}

    <h4 class="text-center h4-respons">{% trans %}Votre panier est vide{% endtrans %} !</h4>

    {% endif %}
</div>

{% endblock %}
