{% extends 'base.html.twig' %}

{% block title %}Interface Fab-Lab
{% endblock %}

    {% block stylesheets %}{% endblock %}

{% block body %}

<div id="all">
	<div class="jumbotron jumbotron-fluid">
		<div class="container">
			<h1 class="display-4">Vous voulez commander {{product.ProductName}}</h1>
        </div>
    </div>     

    <div class="container" style="text-align: center">
        <h3>Est-ce que vos informations sont correctes ?</h3>
        
        <div class="row mt-4">

            <p><h5 class="col-md-6 order-info">Nom/Pr√©nom : </h5>{{app.user.LastName}} {{app.user.FirstName}} </p>
            <p><h5 class="col-md-6 order-info">Adresse Email :</h5>{{app.user.Email}}</p>
            <p><h5 class="col-md-6 order-info">Adresse :</h5>{{app.user.Street}}</p>
            <p><h5 class="col-md-6 order-info">Code postal/Pays :</h5>{{app.user.PostalCode}}, {{app.user.Country}}</p>

        </div>

        <a href="{{path('security_account')}}" id="button" class="btn mt-3">Modifier mes informations</a>

        <h4 class="mt-3">Si oui, combien voulez-vous en commander ?</h4>


            <select class=" form_css_option mt-3 mb-4" name="StockOptions" id="stock-select">

                <option value="">--Choissez une option--</option>

                {% for i in range(1, product.Stock) %}
                    <option value= {{ i }}> {{ i }}</option>
                {% endfor %}

            </select>

            <br>

            <button href="" id="button" class="btn" onclick="Popup()">Commander</button>
            

        {% set Stock =  product.Stock %}
        {% set ProductName =  product.ProductName %}
        {% set Pid =  product.id %}
    </div>
</div>

    <script type="text/javascript">
        
        function Popup(){
            var Stock = "{{Stock}}";
            var ProductName = "{{ProductName}}";
            var selectvalue = document.getElementById('stock-select').value;
            var sure = document.getElementById('sure');
            var all = document.getElementById('all');
            if( selectvalue >= 1 && selectvalue <= Stock ) {
                document.getElementById("text").innerHTML = "Etes-vous sur de vouloir commander "+ selectvalue +" {{ProductName}} ? "
                sure.style.display = "block";
                all.style.pointerEvents = "none";
                return selectvalue;
            } else {
                alert("Veuillez selectionnez une valeur.");
            }
        }

        function hide_confirm(){
            var sure = document.getElementById('sure');
            var all = document.getElementById('all');
            if (sure.style.display === "block") {
                sure.style.display = "none";
                all.style.pointerEvents = "auto";
                
            }
        }

        function route(){
            var quantity = document.getElementById('stock-select').value;
            var Pid = "{{Pid}}";
            var url = '{{ path("order_product", {'id': 'id', 'quantity':'quantity'}) }}'; 
                    url = url.replace("id", Pid);
                    url = url.replace("quantity", quantity);
                    window.location.replace(url);
            
        }
    </script>


    <div class="confirm_div" id="sure" >
        <h2 class="mt-5" id="text"></h2>
        <div class="confirm_buttons">
            <button id="button" class="btn mr-3" onclick="route()">Confirmer</button>
            <button id="button" class="btn" onclick="hide_confirm()">Annuler</button>
        </div>
    </div>
{% endblock %}
