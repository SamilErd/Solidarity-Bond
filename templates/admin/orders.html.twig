{% extends 'base.html.twig' %}

{% block title %}Interface Fab-Lab
{% endblock %}

    {% block stylesheets %}{% endblock %}

{% block body %}
	<div class="jumbotron jumbotron-fluid">
		<div class="container">
			<h1 class="display-4">Vous pouvez consulter les commandes ici</h1>
        </div>
    </div> 
            
        <div class="container table-responsive">
            <table class="table">
            <thead class="thead-dark">
                <tr>
                <th scope="col">#</th>
				<th scope="col">Produits</th>
				<th scope="col">Quantité</th>
                <th scope="col">Nom</th>
                <th scope="col">Prénom</th>
				<th scope="col">Email</th>
                <th scope="col">Adresse</th>
                <th scope="col">Status</th>
                <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
            {% for order in orders %}
                <tr>
                <th>{{order.id}}</th>
				<th>
				{% for product in order.HasProduct %}
				{{product.ProductName}}
					{% if product.id < order.HasProduct|length %},{% else %}.{% endif %}
				{% endfor %}
				</th>
				<th>
                {% for key, quantity in order.quantity %}
                    {{quantity}}
					{% if key < (quantity|length - 1) %},{% else %}.{% endif %}
				{% endfor %}
				
                </th>
                <td>{{order.Iduser.FirstName}}</td>
                <td>{{order.Iduser.LastName}}</td>
				<td>{{order.Iduser.Email}}</td>
                <td>{{order.Iduser.Street}}, {{order.Iduser.PostalCode}}, {{order.Iduser.country}}</td>
                <td>{{order.status}}</td>
				<td><a href="{{path('order_detail',{'id' : order.id})}}" class="btn" id="button">Voir la commande</td>
                </tr>
            {% endfor %}
            </tbody>
            </table>
        </div>
            
                  





{% endblock %}