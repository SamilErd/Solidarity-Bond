{% extends 'base.html.twig' %}

{% block title %}Interface Fab-Lab
{% endblock %}

    {% block stylesheets %}{% endblock %}

{% block body %}
	<div class="jumbotron jumbotron-fluid">
		<div class="container">
			<h1 class="display-4">Bienvenue sur l'interface FAB-LAB.</h1>

		</div>
	</div>
    <div style="text-align:center">
    <a href="{{path('admin_new_product')}}" class="btn btn-primary">Ajouter un produit</a>
    </div>
    <div class="cards" style ="width: 20%;margin: 50px auto">
    <div class="row">
        <div class="col">
            {% for product in products %}
                <div class="card card-block">
                    <img class="card-img-top" data-src="holder.js/100px180/" alt="100%x180" src={{ asset('images/products/{{product.Image}}')}} data-holder-rendered="true" style="height: auto; width: 100%; display: block; color: white;margin: 15px auto">
                    <div class="card-block">
                        <h4 class="card-title">{{product.ProductName}}</h4>
                        <p class="card-text" style="margin: 15px; height: 100px">{{product.Description}}</p>
                        <p class="card-text" style="margin: 15px; height: 100px">Prix : {{product.Price}} â‚¬</p>
                        <p class="card-text" style="margin: 15px; height: 100px">Stock : {{product.Stock}} restant</p>
                        <a href="{{path('admin_more_page', {'id': product.id } )}}" class="btn btn-primary" style="margin: 15px;">j'en ai produit</a>
                        <a href="{{path('admin_sold_page', {'id': product.id } )}}" class="btn btn-primary" style="margin: 15px;">j'en ai vendu</a>
                    </div>
                </div>
            {% endfor %}

            </div>
        </div>            
    </div >  
</div>  





{% endblock %}