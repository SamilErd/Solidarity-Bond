{% extends 'base.html.twig' %}

{% block title %}Interface Fab-Lab
{% endblock %}

    {% block stylesheets %}{% endblock %}

{% block body %}
	<div class="jumbotron jumbotron-fluid">
		<div class="container">
			<h1 class="display-4">Gestion de la production</h1>

		</div>
	</div>


    
    <div style="text-align:center">
    <a href="{{path('admin_new_product')}}" class="btn" id="button">Ajouter un produit</a>
    </div>
    <div class="row">
        <div class="col">
            {% for product in products %}
                <div class="cards mb-5">
                    <img class="card-img-top cards-img" data-src="holder.js/100px180/" alt="100%x180" src="../images/products/{{product.Image}}" data-holder-rendered="true">
                    <div class="card-block">
                        <h4 class="card-title">{{product.ProductName}}</h4>
                        <p class="card-text" style="margin: 15px; height: 100px">{{product.Description}}</p>
                        <p class="card-text" style="margin: 15px; height: 100px">Prix : {{product.Price}} â‚¬</p>
                        <p class="card-text" style="margin: 15px; height: 100px">Stock : {{product.Stock}} restant</p>
                        <a href="{{path('admin_more_page', {'id': product.id } )}}" class="btn btn-primary" style="margin: 15px;">j'en ai produit</a>
                        <a href="{{path('admin_sold_page', {'id': product.id } )}}" class="btn btn-primary" style="margin: 15px;">j'en ai vendu</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>  





{% endblock %}