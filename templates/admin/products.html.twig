{% extends 'base.html.twig' %}

{% block title %}Interface Fab-Lab
{% endblock %}

    {% block stylesheets %}{% endblock %}

{% block body %}
	<div class="jumbotron jumbotron-fluid">
		<div class="container">
			<h1 class="display-4">Gestion de la production</h1>

		</div>
	</div>


    
    <div style="text-align:center">
    <a href="{{path('admin_new_product')}}" class="btn" id="button">Ajouter un produit</a>
    </div>

    <div class="container">
    <div class="row">

            {% for product in products %}

        <div class="col">
                <div class="card mt-3 mb-5">
                    <img class="card-img-top cards-img" data-src="holder.js/100px180/" alt="100%x180" src="../images/products/{{product.Image}}" data-holder-rendered="true">
                    <div class="card-block">
                        <h4 class="card-title">{{product.ProductName}}</h4>
                        <p class="card-text">{{product.Description}}</p>
                        <p class="card-text">Prix : {{product.Price}} â‚¬</p>
                        <p class="card-text">Stock : {{product.Stock}} restant</p>
                        <a href="{{path('admin_more_page', {'id': product.id } )}}" class="btn" id="button">J'en ai produit</a>
                        <a href="{{path('show_product', {'id': product.id } )}}" class="btn" id="button">Page produit</a>
                    </div>
                </div>

        </div>
            {% endfor %}

     </div>
    </div>
</div>  





{% endblock %}