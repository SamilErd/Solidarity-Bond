{% extends 'base.html.twig' %}

{% block title %}Interface Fab-Lab
{% endblock %}

    {% block stylesheets %}{% endblock %}

{% block body %}


<div class="container">
			<h1 class="display-4">Ajouter un produit.</h1>
		</div>



			{{ form_start(formnp) }}
			
			<div class="form">
			
				{{ form_errors(formnp) }}
				<div class="row">
					<div class="col-6 mb-3 mt-3">
						{{ form_widget(formnp.ProductName, {'attr':
                        {
						'class' : 'form_css',
                        'placeholder' : "Nom du produit"
                        }
                    }) 
                }}
					</div>
					<div class="col-6 mb-3 mt-3">
						{{ form_widget(formnp.Description, {'attr':
                        {
						'class' : 'form_css',
                        'placeholder' : "Description"
                        }
                    }) 
                }}
					</div>
					<div class="col-6 mb-3">
						{{ form_widget(formnp.Price, {'attr':
                        {
						'class' : 'form_css',
                        'placeholder' : "Prix"
                        }
                    	}) 
                	}}
					
					</div>
					<div class="col-6 mb-3">
						{{ form_widget(formnp.Stock, {'attr':
                        {
						'class' : 'form_css',
                        'placeholder' : "Stock"
                        }
                    }) 
                }}
					</div>
					<div class="col-6 mb-3" >
						{{ form_widget(formnp.Image, {'attr':
                    {
					'class' : 'form_css',
                    'placeholder' : "Choisissez votre image"
                    }
                }) 
            }}
					</div> 
					<div class="col-6 mb-3" >
						{{ form_widget(formnp.Ajouter, {'attr':
                    {
					'class' : 'btn_form_css',
                    }
                }) 
            }}
					</div> 


				
			</div>

{{ form_end(formnp) }}





{% endblock %}
	
		