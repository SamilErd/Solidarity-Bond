{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}

{% block body %}

<style> 
.foo {
  width: 75%;
  padding: 12px 20px;
  box-sizing: border-box;
  border: none;
  border-bottom: 2px solid;
}
</style>

	<div class="jumbotron jumbotron-fluid">
		<div class="container">
			<h1 class="display-4">Contact</h1>
            <p class="lead">Vous pouvez nous contacter ici</p>
		</div>
	</div>

    <div class="container"
        <form>
        {{ form_start(form) }}
            <div class="form-row">
                <div class="form-group col-md-6">
                {{ form_widget(form.lastname, {'attr':{'class': 'foo', 'placeholder':'Nom'}}) }}
                </div>
                <div class="form-group col-md-6">
                {{ form_widget(form.firstname, {'attr':{'class': 'foo', 'placeholder':'Prénom'}}) }}
                </div>
            </div>

            <div class="form-row" >
                <div class="form-group col-md-6">
                {{ form_widget(form.email, {'attr':{'class' : 'foo', 'placeholder':'Adresse Email'}}) }}
                </div>
                <div class="form-group col-md-6">
                {{ form_widget(form.phone, {'attr':{'class': 'foo', 'placeholder':'Numéro de téléphone'}}) }}
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                {{ form_widget(form.message, {'attr':{'class': 'foo', 'placeholder':'Votre message'}}) }}
                </div>
            </div>
            <button type="submit" class="btn btn-primary mb-5">Envoyer</button>
            {{ form_end(form) }}
        </form>
    </div>

{% endblock %}
