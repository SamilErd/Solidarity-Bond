{% extends 'base.html.twig' %}

{% block title %}{% trans %}Réinitialiser le mot de passe{% endtrans %}
{% endblock %}


{% block body %}
{% if token is not null %}
<div class="jumbotron jumbotron-fluid">
		<div class="container">
			<h1 class="display-4">{% trans %}Nouveau mot de passe{% endtrans %}</h1>
		</div>
	</div>

	{% if error is not empty %}
	<div class="alert alert-danger text-center"  style="width:75%; margin: 20px auto;">
	<p>{{ error }}</p>
	</div>
	{% endif %}
    {% if msg is not empty %}
	<div class="alert alert-success text-center"  style="width:75%; margin: 20px auto;">
	<p>{{ msg }} </p>
    <a href="{{path('security_login')}}"  id="text">{% trans %}Connectez-vous{% endtrans %}</a>
	</div>
	{% endif %}
		
<div class="container">
    <h4 class="mt-5">{% trans %}Entrez votre nouveau mot de passe{% endtrans %}</h4>
    <div class="container">
        <div class="row">

            <form action="{{path('security_password_reset', {'token' : token.Token})}}" method="post" >
					<input class="form_css" placeholder = "Nouveau mot de passe" type="password" name="NewPass" style="margin-bottom: 15px"/>
					<input class="form_css" placeholder = "Confirmez votre mot de passe" type="password" name="ConfirmPass" style="margin-bottom: 15px" />
					<button type="submit" class="btn btn-dark " id="btn" style="display:block ; width: 200px; margin-bottom: 10px">{% trans %}Mettre à jour{% endtrans %}</button>
					</form>

        </div>
    </div>
</div>
{% else %}
<script>
var url = '{{ path("index") }}'; 
                window.location.replace(url);

</script>
	
{% endif %}
{% endblock %}