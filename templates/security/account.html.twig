{% extends 'base.html.twig' %}

{% block title %}Mon compte
{% endblock %}

{% block body %}
	<div class="jumbotron jumbotron-fluid">
		<div class="container">
			<h1 class="display-4">Mes informations de compte.</h1>

		</div>
	</div>
	<div class="bdr-login w-50 mx-auto mb-5">
		<div class="m-4 text-center">
        {% if updatemessage is defined%}
        <h1>{{ updatemessage }}</h1>
        {% endif %}
            {{ form_start(form) }}
			<div class="form">
				
				{{ form_errors(form.email) }}
			
				
				<div class="row">
					<div class="col-6 mb-3 mt-3">
						{{ form_widget(form.FirstName, {'attr':
                        {
                        'placeholder' : "Nom"
                        }
                    }) 
                }}
					</div>
					<div class="col-6 mb-3 mt-3">
						{{ form_widget(form.LastName, {'attr':
                        {
                        'placeholder' : "Prénom"
                        }
                    }) 
                }}
					</div>
					<div class="col-6 mb-3">
						{{ form_widget(form.password.first, {'attr':
                        {
                        'placeholder' : "Mot de passe"
                        }
                    	}) 
                	}}
					{{ form_errors(form.password.first) }}
					</div>
					<div class="col-6 mb-3">
						{{ form_widget(form.password.second, {'attr':
                        {
                        'placeholder' : "Confirmez le mot de passe"
                        }
                    }) 
                }}
					</div>
					<div class="col-6 mb-3">
						{{ form_widget(form.email, {'attr':
                    {
                    'placeholder' : "Email"
                    }
                }) 
            }}
					</div>
					<div class="col-6 mb-3 mt-3">
						{{ form_widget(form.phoneNum, {'attr':
                            {
                            'placeholder' : "Téléphone"
                            }
                        }) 
                    }}
					</div>
				</div>
				<div class="col-6 mb-3">
						{{ form_widget(form.street, {'attr':
                    {
                    'placeholder' : "Addresse"
                    }
                }) 
            }}
				</div>
				<div class="col-6 mb-3">
						{{ form_widget(form.postalcode, {'attr':
                    {
                    'placeholder' : "Code Postal"
                    }
                }) 
            }}
					</div>
					<div class="col-6 mb-3">
						{{ form_widget(form.country, {'attr':
                    {
                    'placeholder' : "Pays"
                    }
                }) 
            }}
					</div>
				
				<button type="submit" class="btn btn-dark btn-block mt-4">
					Mettre à jour
				</button>
			</div>

			{{ form_end(form) }}
		</div>
	</div>

{% endblock %}